<%= bootstrap_form_with(model: secret, local: true) do |form| %>
  <% if secret.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(secret.errors.count, "error") %> prohibited this secret from being saved:</h2>

      <ul>
      <% secret.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= form.text_field :title %>
    <%= form.text_area :body, size: "82x20" %>
    <%= form.text_field :password %>
    <%= form.number_field :expiration, options = {placeholder: "in hours...", min: 1, max: 720} %>

  <div class="actions">
    <%= form.submit %>
    <%= link_to 'Back', secrets_path, class: "btn btn-primary" %>
  </div>
<% end %>
